<%= render 'shared/header', title: @category.name, back_link: categories_path %>
<section class="container">
<div class="category-header">
    <p>Total Expense</p>
    <p><%= number_to_currency(@category.total_expense) %></p>
</div>

<div class="category-container">
    <% @category.expenses.each do |expense| %>
        <p><%= expense.name %> - <%= expense.amount %></p>
    <% end %>
</div>

<div class="action-container">
    <%= link_to "Add Expense", new_category_expense_path(@category), class: "action-button" %>
</div>
</section>