<%= form_with model: @category do |form| %>
    <div class="form-group">
    <%= form.label :name, "Category Name" %>
    <%= form.text_field :name, placeholder: "e.g., Food, Travel, etc", required: true, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :icon %>
    <%= form.text_field :icon, placeholder: "Upload Icon", required: true, class: 'form-control' %>
  </div>

  <%= form.submit "Create", class: 'btn btn-primary' %>

  <%= link_to 'Cancel', categories_path, class: "btn btn-outline" %>
<% end %>