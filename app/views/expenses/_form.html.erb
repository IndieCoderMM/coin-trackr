<%= form_with model: [@category, @expense] do |form| %>
  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, class: 'form-control', required: true %>
  </div>

  <div class="form-group">
    <%= form.label :amount %>
    <%= form.number_field :amount, class: 'form-control', required: true, min: 0 %>
  </div>

  <div class="form-group">
    <%= form.label :category_ids, "Categories" %>
    <%= form.collection_select :category_ids, @categories, :id, :name, {selected: @category.id}, {class: 'form-control', multiple: true, required: true} %>
  </div>

  <%= form.submit "Save", class: 'btn btn-primary' %>
  <%= link_to 'Cancel', category_path(@category), class: 'btn btn-outline' %>
<% end %>
